<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">
    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@layout/activity_login"
        motion:constraintSetStart="@layout/activity_splash"
        motion:duration="5000"

        >
        <KeyFrameSet>
            <KeyPosition
                motion:framePosition="65"
                motion:keyPositionType="deltaRelative"
                motion:motionTarget="@+id/imgView_hart"
                motion:percentX="0"
                motion:percentY="0" />


            <KeyPosition
                motion:framePosition="65"
                motion:keyPositionType="deltaRelative"
                motion:motionTarget="@+id/imgView_hands"
                motion:percentX="0"
                motion:percentY="0" />

            <KeyPosition
                motion:framePosition="75"
                motion:keyPositionType="deltaRelative"
                motion:motionTarget="@+id/imgView_hart"
                motion:percentX="1"
                motion:percentY="1" />


            <KeyPosition
                motion:framePosition="75"
                motion:keyPositionType="deltaRelative"
                motion:motionTarget="@+id/imgView_hands"
                motion:percentX="1"
                motion:percentY="1" />

            <KeyAttribute
                android:rotation="0"
                motion:framePosition="0"
                motion:motionTarget="@+id/imgView_hands"

                />
            <KeyAttribute
                android:rotation="180"
                motion:framePosition="85"
                motion:motionTarget="@+id/imgView_hands"

                />
            <KeyPosition

                motion:framePosition="75"
                motion:keyPositionType="deltaRelative"
                motion:motionTarget="@+id/imgView_left_hand"
                motion:percentX="0"
                motion:percentY="0"

                />

            <KeyPosition

                motion:framePosition="75"
                motion:keyPositionType="deltaRelative"
                motion:motionTarget="@+id/imgView_right_hand"
                motion:percentX="0"
                motion:percentY="0"

                />

            <KeyPosition

                motion:framePosition="85"
                motion:keyPositionType="deltaRelative"
                motion:motionTarget="@+id/imgView_left_hand"
                motion:percentX="1"
                motion:percentY="1"

                />

            <KeyPosition

                motion:framePosition="85"
                motion:keyPositionType="deltaRelative"
                motion:motionTarget="@+id/imgView_right_hand"
                motion:percentX="1"
                motion:percentY="1"

                />
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="75"
                motion:motionTarget="@+id/linlay_inputs"
                />

            <KeyAttribute
                android:alpha="1"
                motion:framePosition="85"
                motion:motionTarget="@+id/linlay_inputs"
                />

            <KeyAttribute
                android:alpha="0"
                motion:framePosition="75"
                motion:motionTarget="@+id/tv_forgetPassword"
                />

            <KeyAttribute
                android:alpha="1"
                motion:framePosition="85"
                motion:motionTarget="@+id/tv_forgetPassword"
                />

            <KeyPosition

                motion:framePosition="75"
                motion:motionTarget="@+id/tv_register"
                motion:percentX="0"
                motion:percentY="0"

                />

            <KeyPosition

                motion:framePosition="85"
                motion:motionTarget="@+id/tv_register"
                motion:percentX="1"
                motion:percentY="1"

                />
        </KeyFrameSet>
    </Transition>
</MotionScene>